        <script><![CDATA[//Get the today's date time
var rightnow = new GlideDateTime();

//Write query to add conditions in the task table object
//1. due date <= today's date
//2. state != closed complete
var overdueNIT = new GlideRecord('x_58872_needit_needit_task');
overdueNIT.addQuery('due_date','<=',rightnow);
overdueNIT.addQuery('state','!=',3);

overdueNIT.query();

while(overdueNIT.next()){
	gs.info('Testing without getValue function. Overdue NeedIt task #: '+overdueNIT.number);
	gs.eventQueue('x_58872_needit.overdueNeedItTask',overdueNIT,overdueNIT.number,gs.getUserName());
}
]]></script>
